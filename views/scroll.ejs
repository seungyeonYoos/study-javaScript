<body>
    <div class="card-background">
        <div class="card-box">
            <img src="../static/img/card1.png">
        </div>
        <div class="card-box">
            <img src="../static/img/card2.png">
        </div>
        <div class="card-box">
            <img src="../static/img/card3.png">
        </div>
    </div>


  <script src="https://code.jquery.com/jquery-3.6.3.min.js"
    integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
  <script src="../static/index.js"></script>
  <script> 
    $(window).scroll(function(){
        var height = $(window).scrollTop();
        var y = (-1/480) * height + 5/2;
        var h = (-1/2400) * height + 26/20;
        $('.card-box').eq(0).css('opacity', y);
        $('.card-box').eq(0).css('transform',`scale(${h})`);
        console.log(height);

    });
    
    //720 ~ 1200까지 스크롤바를 내리면, scale 1~0.8로 서서히 변경

  </script>
</body>

</html>